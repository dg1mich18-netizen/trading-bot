# =============================================
# НАСТРОЙКИ TRADING BOT
# =============================================

# Binance API Configuration
# Получите ключи на https://testnet.binance.vision/ (для тестов)
# Или на https://www.binance.com/ (для реальной торговли)
BINANCE_API_KEY=your_api_key_here
BINANCE_SECRET_KEY=your_secret_key_here

# Trading Settings
# Пара для торговли (BTCUSDT, ETHUSDT и т.д.)
TRADING_PAIR=BTCUSDT

# Использовать тестовую сеть (True - тестовая, False - реальная)
TESTNET=true

# Risk Management
# Максимальный размер позиции (1.0 = 100%, 0.1 = 10%)
MAX_POSITION_SIZE=0.1

# Стоп-лосс в процентах (2.0 = 2%)
STOP_LOSS_PERCENT=2.0

# Logging
# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
